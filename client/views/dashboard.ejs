document.addEventListener("DOMContentLoaded", function() {
  const viewCartBtns = document.querySelectorAll("#view-cart-btn1, #view-cart-btn2, #view-cart-btn8, #view-cart-btn9, #view-cart-btn10, #view-cart-btn11, #view-cart-btn12, #view-cart-btn13, #view-cart-btn14, #view-cart-btn15");
  const closeCartBtns = document.querySelectorAll(".close-cart-btn");
  const orderBtn = document.querySelector(".bottom-bar a:nth-of-type(3)");
  const cartCount = orderBtn.querySelector("#cart-count");
  let totalItems = 0; // initialize total items count to zero
  cartCount.style.display = "none"; // hide cart count notification initially

  viewCartBtns.forEach(function(viewCartBtn) {
    const cartDetails = viewCartBtn.nextElementSibling;

    const quantityValue = cartDetails.querySelector(".cart-item-quantity-value");
    let priceValue = cartDetails.querySelector(".cart-item-price"); // update to let instead of const

    const incrementBtn = cartDetails.querySelector(".cart-item-quantity-btn:nth-of-type(2)");
    const decrementBtn = cartDetails.querySelector(".cart-item-quantity-btn:nth-of-type(1)");

    viewCartBtn.addEventListener("click", function() {
      cartDetails.style.display = "block";
    });

    closeCartBtns.forEach(function(closeCartBtn) {
      closeCartBtn.addEventListener("click", function() {
        cartDetails.style.display = "none";
      });
    });

    function updateCartCount() {
      totalItems += 1; // increment total items count
      cartCount.textContent = totalItems; // update cart count notification
      cartCount.style.display = "inline-block"; // show cart count notification
    }

    incrementBtn.addEventListener("click", function() {
      let currentQuantity = parseInt(quantityValue.textContent);
      currentQuantity++;
      quantityValue.textContent = currentQuantity;
      let price = parseFloat(priceValue.textContent.replace("$", ""));
      priceValue.textContent = "$" + (price + parseFloat(priceValue.dataset.price)).toFixed(2); // update price value using dataset attribute
      totalItems += 0; // increment total items count
      updateCartCount(); // update cart count notification
    });

    decrementBtn.addEventListener("click", function() {
      let currentQuantity = parseInt(quantityValue.textContent);
      if (currentQuantity > 1) {
        currentQuantity--;
        quantityValue.textContent = currentQuantity;
        let price = parseFloat(priceValue.textContent.replace("$", ""));
        priceValue.textContent = "$" + (price - parseFloat(priceValue.dataset.price)).toFixed(2); // update price value using dataset attribute
        totalItems -= 1; // decrement total items count
        cartCount.textContent = totalItems; // update cart count notification
      }
      if (totalItems == 0) {
        cartCount.style.display = "none"; // hide cart count notification if no items in cart
      }
    });
  });
});



